{
    "name": "Transaction Importer (Fire)",
    "version": "1.0",
    "description": "Import transactions and automatically push them in google sheets",
    "manifest_version": 2,
    "permissions": ["storage", "identity"],
    "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self';",
    "options_page": "options.html",
    "oauth2": {
        "client_id": "180157219371-2p3tl7msu62skrpm9h5qjdh7t3e3vj2q.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/spreadsheets.readonly",
            "https://www.googleapis.com/auth/spreadsheets"
        ]
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "./images/16.png",
        "32": "./images/32.png",
        "64": "./images/64.png",
        "128": "./images/128.png"
    }
}